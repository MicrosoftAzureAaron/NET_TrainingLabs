{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.33.93.31351",
      "templateHash": "1077597926386894697"
    }
  },
  "parameters": {
    "publicIpVpnGwName": {
      "type": "string",
      "defaultValue": "vpnGwPublicIP"
    },
    "vpnGatewayName": {
      "type": "string",
      "defaultValue": "myVpnGateway"
    },
    "vpnGatewaySku": {
      "type": "string",
      "defaultValue": "vpngw1"
    },
    "hubVnetId": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2023-09-01",
      "name": "[parameters('publicIpVpnGwName')]",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Standard",
        "tier": "Regional"
      },
      "properties": {
        "publicIPAllocationMethod": "Static"
      }
    },
    {
      "type": "Microsoft.Network/virtualNetworkGateways",
      "apiVersion": "2023-09-01",
      "name": "[parameters('vpnGatewayName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "vnetGatewayConfig",
            "properties": {
              "subnet": {
                "id": "[resourceId(format('{0}', parameters('hubVnetId')), 'subnets', 'GatewaySubnet')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIpVpnGwName'))]"
              }
            }
          }
        ],
        "gatewayType": "Vpn",
        "vpnType": "RouteBased",
        "sku": {
          "name": "[parameters('vpnGatewaySku')]",
          "tier": "[parameters('vpnGatewaySku')]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', parameters('publicIpVpnGwName'))]"
      ]
    }
  ]
}